{
  "name": "@lume-ui/theme",
  "version": "0.0.1",
  "private": true,
  "description": "Theme package with Tailwind CSS and shadcn-ui themes",
  "keywords": [
    "react",
    "theme",
    "tailwindcss",
    "shadcn-ui",
    "ui"
  ],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.13.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./index.css": "./dist/index.css",
    "./themes": {
      "types": "./dist/themes.d.ts",
      "import": "./dist/themes.mjs",
      "require": "./dist/themes.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && postcss src/styles/index.css -o dist/index.css",
    "build:css": "postcss src/styles/index.css -o dist/index.css",
    "dev": "tsup --watch"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "tw-animate-css": "^1.4.0"
  }
}

